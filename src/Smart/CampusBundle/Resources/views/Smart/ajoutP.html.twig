{% extends "SmartCampusBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Ajout{% endblock %}

{% block body %}

    <h1><span class="glyphicon glyphicon-home" style="cursor: pointer;" onclick="location.href='{{ path('smartcampus_accueil') }}';"></span> Ajout d'un capteur Physique</h1>

	<!--formulaire d'ajout d'un capteur physique-->
    <div class="well container">
      <form class="form-horizontal" role="form" method="post" {{ form_enctype(form) }}>
          <div class="form-group">
              <div class="col-md-2">{{ form_label(form.name) }}</div>
              <div class="col-md-2">{{ form_widget(form.name) }}</div>
              <div class="col-md-3">{{ form_errors(form.name) }}</div>
          </div>
          <div class="form-group">
              <div class="col-md-2">{{ form_label(form.kind) }}</div>
              <div class="col-md-2">{{ form_widget(form.kind) }}</div>
              <div class="col-md-3">{{ form_errors(form.kind) }}</div>
          </div>
          <div class="form-group">
              <div class="col-md-2">{{ form_label(form.frequency) }}</div>
              <div class="col-md-2">{{ form_widget(form.frequency) }}</div>
              <div class="col-md-3">{{ form_errors(form.frequency) }}</div>
          </div>
          <div class="form-group">
              <div class="col-md-2">{{ form_label(form.board) }}</div>
              <div class="col-md-2">{{ form_widget(form.board) }}</div>
              <div class="col-md-3">{{ form_errors(form.board) }}</div>
          </div>
          <div class="form-group">
              <div class="col-md-2">{{ form_label(form.pin) }}</div>
              <div class="col-md-2">{{ form_widget(form.pin) }}</div>
              <div class="col-md-3">{{ form_errors(form.pin) }}</div>
          </div>
          <div class="form-group">
              <div class="col-md-2">{{ form_label(form.endpoint) }}</div>
              <div class="col-md-2">{{ form_widget(form.endpoint) }}</div>
              <div class="col-md-3">{{ form_errors(form.endpoint) }}</div>
          </div>
          <div class="form-group">
              {{ form_rest(form) }}
          </div>
          <div class="form-group">
              <input type="submit" class="btn btn-success"/>
          </div>
      </form>
    </div>

{% endblock %}
